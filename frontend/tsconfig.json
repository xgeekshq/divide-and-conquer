{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "types": [
      "@types/jest",
      "jest",
      "@testing-library/jest-dom",
    ],
    "typeRoots": ["./types", "./vendor/types"],
    "incremental": true
  },
  "include": [
    "next.config.js",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "styles/*",
    "jest.config.js",
    "jest.setup.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
